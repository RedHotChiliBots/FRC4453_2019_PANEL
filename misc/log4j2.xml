<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="SailNet" monitorInterval="60">
	<Properties>
		<Property name="baseDir">../logs</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" /> 
		</Console>

		<RollingFile name="RollingFile"
			fileName="${baseDir}/SailNet.log" immediateFlush="true"
			filePattern="${baseDir}/$${date:yyyy-MM}/SailNet-%d{yyyy-MM-dd}.log.gz">
			<PatternLayout>
				<pattern>%d{MMM dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
				<!-- pattern>%d %p %c{1.} [%t] %m%n</pattern -->
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<DefaultRolloverStrategy>
				<Delete basePath="${baseDir}" maxDepth="2">
					<IfFileName glob="*/SailNet-*.log.gz" />
					<IfLastModified age="30d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>

	<Loggers>		<!-- ALL < DEBUG < INFO < WARN < ERROR < FATAL < OFF -->
		<Logger name="com.sailnet.testlog4j2" level="ERROR">
			<AppenderRef ref="RollingFile"/>
		</Logger>
		
		<Logger name="com.sailnet.common" level="WARN">
			<AppenderRef ref="RollingFile"/>
		</Logger>
		
		<Logger name="com.sailnet.sailnav" level="WARN">
			<AppenderRef ref="RollingFile"/>
		</Logger>
		
		<Logger name="com.sailnet.sailgps" level="WARN">
			<AppenderRef ref="RollingFile"/>
		</Logger>
		
		<Logger name="com.sailnet.sailimu" level="WARN">
			<AppenderRef ref="RollingFile"/>
		</Logger>

		<Root level="debug">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile" />
			<!-- AppenderRef ref="Console" / -->
		</Root>
	</Loggers>
</Configuration>